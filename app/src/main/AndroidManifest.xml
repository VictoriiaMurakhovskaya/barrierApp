<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barrierApp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.barrierApp.MessageActivity"
            android:label="@string/title_activity_login">
        </activity>

        <activity
            android:name="com.example.barrierApp.RegisterActivity"
            android:label="Регистрация">
        </activity>

        <activity
            android:name="com.example.barrierApp.ResultActivity"
            android:label="Ответ сервера">
        </activity>

        <activity
            android:name="com.example.barrierApp.ServerRegisterActivity"
            android:label="Настройки сервера">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name="com.example.barrierApp.MapsActivityCurrentPlace"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>